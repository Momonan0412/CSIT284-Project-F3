<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".activities.ChooseLevel">

    <!-- TO BE REVISED -->
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="1:2"
        app:layout_constraintEnd_toEndOf="@id/guidelineRight"
        app:layout_constraintStart_toStartOf="@id/guidelineLeft"
        app:layout_constraintTop_toTopOf="@id/guidelineTop"
        app:layout_constraintBottom_toBottomOf="@+id/guidelineBottom"
        app:srcCompat="@drawable/background" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="1" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="1" />
    <!-- TO BE REVISED -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="@+id/guidelineContentRight"
        app:layout_constraintStart_toStartOf="@+id/guidelineContentLeft"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnLevelOne"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ripple"
                    android:backgroundTint="#FFFFCC"
                    android:elevation="10dp"
                    android:fontFamily="@font/jujutsu_kaisen"
                    android:shadowColor="#FFFFFF"
                    android:shadowDx="10"
                    android:shadowDy="10"
                    android:shadowRadius="10"
                    android:text="@string/level_1"
                    android:textColor="#000000"
                    android:textSize="34sp" />

                <Button
                    android:id="@+id/btnLevelTwo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/ripple"
                    android:backgroundTint="#FFFFCC"
                    android:elevation="10dp"
                    android:fontFamily="@font/jujutsu_kaisen"
                    android:shadowColor="#FFFFFF"
                    android:shadowDx="10"
                    android:shadowDy="10"
                    android:shadowRadius="10"
                    android:text="@string/level_2"
                    android:textColor="#000000"
                    android:textSize="34sp" />

                <Button
                    android:id="@+id/btnLevelThree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/ripple"
                    android:backgroundTint="#FFFFCC"
                    android:elevation="10dp"
                    android:fontFamily="@font/jujutsu_kaisen"
                    android:shadowColor="#FFFFFF"
                    android:shadowDx="10"
                    android:shadowDy="10"
                    android:shadowRadius="10"
                    android:text="@string/level_3"
                    android:textColor="#000000"
                    android:textSize="34sp" />

                <Button
                    android:id="@+id/btnLevelFour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/ripple"
                    android:backgroundTint="#FFFFCC"
                    android:elevation="10dp"
                    android:fontFamily="@font/jujutsu_kaisen"
                    android:shadowColor="#FFFFFF"
                    android:shadowDx="10"
                    android:shadowDy="10"
                    android:shadowRadius="10"
                    android:text="@string/level_4"
                    android:textColor="#000000"
                    android:textSize="34sp" />

                <Button
                    android:id="@+id/btnLevelFive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/ripple"
                    android:backgroundTint="#FFFFCC"
                    android:elevation="10dp"
                    android:fontFamily="@font/jujutsu_kaisen"
                    android:shadowColor="#FFFFFF"
                    android:shadowDx="10"
                    android:shadowDy="10"
                    android:shadowRadius="10"
                    android:text="@string/level_5"
                    android:textColor="#000000"
                    android:textSize="34sp" />

                <Button
                    android:id="@+id/btnLevelSix"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/ripple"
                    android:backgroundTint="#FFFFCC"
                    android:elevation="10dp"
                    android:fontFamily="@font/jujutsu_kaisen"
                    android:shadowColor="#FFFFFF"
                    android:shadowDx="10"
                    android:shadowDy="10"
                    android:shadowRadius="10"
                    android:text="@string/level_6"
                    android:textColor="#000000"
                    android:textSize="34sp" />

                <Button
                    android:id="@+id/btnLevelSeven"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/ripple"
                    android:backgroundTint="#FFFFCC"
                    android:elevation="10dp"
                    android:fontFamily="@font/jujutsu_kaisen"
                    android:shadowColor="#FFFFFF"
                    android:shadowDx="10"
                    android:shadowDy="10"
                    android:shadowRadius="10"
                    android:text="@string/level_7"
                    android:textColor="#000000"
                    android:textSize="34sp" />

                <Button
                    android:id="@+id/btnLevelEight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/ripple"
                    android:backgroundTint="#FFFFCC"
                    android:elevation="10dp"
                    android:fontFamily="@font/jujutsu_kaisen"
                    android:shadowColor="#FFFFFF"
                    android:shadowDx="10"
                    android:shadowDy="10"
                    android:shadowRadius="10"
                    android:text="@string/level_8"
                    android:textColor="#000000"
                    android:textSize="34sp" />

                <Button
                    android:id="@+id/btnLevelNine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/ripple"
                    android:backgroundTint="#FFFFCC"
                    android:elevation="10dp"
                    android:fontFamily="@font/jujutsu_kaisen"
                    android:shadowColor="#FFFFFF"
                    android:shadowDx="10"
                    android:shadowDy="10"
                    android:shadowRadius="10"
                    android:text="@string/level_9"
                    android:textColor="#000000"
                    android:textSize="34sp" />

                <Button
                    android:id="@+id/btnLevelTen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="7.5dp"
                    android:background="@drawable/ripple"
                    android:backgroundTint="#FFFFCC"
                    android:elevation="10dp"
                    android:fontFamily="@font/jujutsu_kaisen"
                    android:shadowColor="#FFFFFF"
                    android:shadowDx="10"
                    android:shadowDy="10"
                    android:shadowRadius="10"
                    android:text="@string/level_10"
                    android:textColor="#000000"
                    android:textSize="34sp" />
            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineContentRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".7"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineContentLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".3" />
</androidx.constraintlayout.widget.ConstraintLayout>